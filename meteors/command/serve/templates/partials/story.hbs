<div class="px-3 sm:px-6 lg:px-8 my-2">
    <div class="flex">
        <div>
            <slot name="tile"></slot>
        </div>
        <div class="flex-1 flex flex-col">
            <div class="text-base">
                <p class="text-base">
                    {{ Link::new(Contrast::High, format!("/story/{}/1", self.id), self.info.title.clone()).render(writer) }}
                    <span class="text-opacity-60 text-white">by</span>
                    {{ #for (i, author) in self.authors.iter().enumerate() }}
                        {{ Link::new(Contrast::High, format!("/author/{}", author.id), author.text.clone()).render(writer) }}
                    {{ /for }}
                </p>
            </div>
            <div class="text-sm">
                <p class="text-sm">
                    {{ self.origins.render(writer) }}
                </p>
            </div>
        </div>
        <div>
            <p class="text-sm text-opacity-60 text-white"></p>
        </div>
    </div>
    <div class="text-sm text-opacity-60 text-white p-wrapper">
        {{ self.info.summary }}
    </div>
    <div class="text-sm">
        <ul class="flex flex-wrap">
            {{ self.tags.render(writer) }}
        </ul>
    </div>
    <div class="text-sm text-opacity-60 text-white flex">
        <p class="flex-grow"></p>
        <p>{{ self.len }} chapter(s)</p>
    </div>
</div>