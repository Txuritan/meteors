<article class="story">
    <header>
        <span class="rating <%= &rating.class() %>"><%= &rating.symbol() %></span> <a href="/story/<%= id %>/1<%= query %>" class="title"><%= &info.title %></a> by
        <% for (i, author) in authors.iter().enumerate() { %>
            <a><%= &author.text %></a><% if i != (&authors.len() - 1) { %>,<% } %>
        <% } %>
    </header>
    <%- warnings.render_once()? %>
    <%- pairings.render_once()? %>
    <%- characters.render_once()? %>
    <%- generals.render_once()? %>
    <p class="summary"># <%= &info.summary %></p>
    <p class="meta">&#123;<span class="info">parts</span>: <span class="count"><%= chapters %></span>&#125;</p>
</article>